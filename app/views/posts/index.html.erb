 <div class='item-contents'>
    <h2 class='title'>New posts</h2>
    <ul class='item-lists'>
      <% @posts.each do |post| %>
        <li class='list'>
        <% if post.image.present? %>
          <%= link_to  post_path(post.id) do %>
          <div class='item-img-content'>
            <%= image_tag post.image, class: "item-img" %>
              <% end %>
            <div class='item-info'>
              <h3 class='item-name'>
                <%= post.name %>
              </h3>
              <div class='item-price'>
                <span><%= post.price %>円</span>
              </div>
            </div>
          </div>
        <%# ダミー画像 %>
        <% else %>
        <%= link_to '#' do %>
          <%= image_tag "dummy.jng", class: "item-img" %>
          <div class='item-info'>
             <h3 class='item-name'>
                写真を投稿してね！
             </h3>
            <div class='item-price'>
              <span>99999999円<br>(税込み)</span>
              </div>
            </div>
          </div>
        <% end %>
        <% end %>
        </li>
      <% end %>
    </ul>
    <%= paginate @posts %>
  </div>
 
</div>
